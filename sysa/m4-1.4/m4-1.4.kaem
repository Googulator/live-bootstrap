#!/bin/sh

set -ex

cd build

# Extract
gunzip ../src/${pkg}.tar.gz
tar xf ../src/${pkg}.tar
cd ${pkg}
cp ../../mk/main.mk Makefile

# Patch and prepare
patch -Np0 -i ../../patches/signal-include.patch

# Build
make

# Install
cp m4 /after/bin/m4
chmod 755 /after/bin/m4

# Test
m4 --version

cd ../..
